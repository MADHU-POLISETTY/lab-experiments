#include <stdio.h>

int main() {
    int b[10], p[10], nb, np;
    int allocation[10], i, j;

    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter number of processes: ");
    scanf("%d", &np);

    for (i = 0; i < nb; i++) scanf("%d", &b[i]);
    for (i = 0; i < np; i++) scanf("%d", &p[i]);

    for (i = 0; i < np; i++) allocation[i] = -1;

    for (i = 0; i < np; i++) {
        int worst = -1;
        for (j = 0; j < nb; j++)
            if (b[j] >= p[i] && (worst == -1 || b[j] > b[worst]))
                worst = j;

        if (worst != -1) {
            allocation[i] = worst;
            b[worst] -= p[i];
        }
    }

    printf("Process Block\n");
    for (i = 0; i < np; i++)
        printf("%d\t%d\n", i + 1, allocation[i] + 1);

    return 0;
}
