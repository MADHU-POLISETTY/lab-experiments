#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, diskSize, direction;
    int i, j, temp;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (max cylinder): ");
    scanf("%d", &diskSize);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    // sort request array
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (req[j] > req[j + 1]) {
                temp = req[j];
                req[j] = req[j + 1];
                req[j + 1] = temp;
            }
        }
    }

    int totalSeek = 0;
    printf("\nDisk Movement:\n");
    printf("%d", head);

    if (direction == 1) { // move right
        for (i = 0; i < n; i++) {
            if (req[i] >= head) {
                totalSeek += abs(req[i] - head);
                head = req[i];
                printf(" -> %d", head);
            }
        }

        totalSeek += abs((diskSize - 1) - head);
        head = diskSize - 1;
        printf(" -> %d", head);

        for (i = n - 1; i >= 0; i--) {
            if (req[i] < head) {
                totalSeek += abs(req[i] - head);
                head = req[i];
                printf(" -> %d", head);
            }
        }
    } else { // move left
        for (i = n - 1; i >= 0; i--) {
            if (req[i] <= head) {
                totalSeek += abs(req[i] - head);
                head = req[i];
                printf(" -> %d", head);
            }
        }

        totalSeek += abs(head - 0);
        head = 0;
        printf(" -> %d", head);

        for (i = 0; i < n; i++) {
            if (req[i] > head) {
                totalSeek += abs(req[i] - head);
                head = req[i];
                printf(" -> %d", head);
            }
        }
    }

    printf("\n\nTotal Seek Time = %d\n", totalSeek);
    return 0;
}
